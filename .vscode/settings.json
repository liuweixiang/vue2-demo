{
  // 配置语言的文件关联
  "files.associations": {
    "*.html": "html",
    "*.vue": "vue",
    "*.cjson": "jsonc"
  },
  "editor.tabSize": 2,
  // 保存时格式化文件
  // 使用prettier时必须打开
  // 单独使用eslint，且仅设置eslint.format.enable为true时必须打开
  // 单独使用eslint，且设置source.fixAll.eslint为true时打开关闭都可以(无需关注)
  "editor.formatOnSave": true,

  // 打开或关闭 Vetur 格式化程序
  "vetur.format.enable": false,
  "vetur.validation.script": false, // 关闭 Vetur 的script验证
  "vetur.validation.style": false, // 关闭 Vetur 的style验证
  "vetur.validation.template": false, // 关闭 Vetur 的template验证
  // "stylelint.autoFixOnSave": false, // stylelint保存自动格式化

  // 定义默认格式化程序(需安装prettier插件)(格式化html)
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "reacttypescript",
    "reactjavascript",
    "html",
    "vue"
  ],

  // 是否启用eslint
  "eslint.enable": true,
  // 启用eslint作为格式化程序
  "eslint.format.enable": true,
  // 定义在保存时运行的格式化程序
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  // 在快速修复菜单中显示打开的 lint 规则文档网页
  "eslint.codeAction.showDocumentation": {
    "enable": true
  }
}
